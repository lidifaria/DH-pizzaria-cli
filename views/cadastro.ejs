<form>
    <div>
        <label for="nome">Nome:</label>
        <input type="text" name="nome" id="nome" placeholder="Digite o seu nome completo sem abreviação.">
    </div>
    <div>
        <label for="email">E-mail:</label>
        <input type="email" name="email" id="email">
    </div>
    <div>
        <label for="cep">CEP:</label>
        <input type="text" name="cep" id="cep" pattern="^[0-9]{5}-[0-9]{3}$" required>
        <span class="error-msg">Preencha o CEP corretamente</span>
    </div>
    <div>
        <label for="UF">UF:</label>
        <input type="text" name="uf" id="uf" disabled required>
    </div>
    <div>
        <label for="cidade">Cidade:</label>
        <input type="text" name="cidade" id="cidade" disabled required>
    </div>
    <div>
        <label for="logradouro">Logradouro:</label>
        <input type="text" name="logradouro" id="logradouro" disabled required>
    </div>
    <div>
        <label for="numero">Nº:</label>
        <input type="text" name="numero" id="numero">
    </div>
    <div>
        <label for="complemento">Complemento:</label>
        <input type="text" name="complemento" id="complemento">
    </div>
    <div>
        <label for="cpf">CPF:</label>
        <input type="text" name="cpf" id="cpf" pattern="^[0-9]{3}.[0-9]{3}.[0-9]{3}-[0-9]{2}$" required>
        <span class="error-msg">Preencha o CPF corretamente</span>
    </div>
    <div class="controles">
        <button type="reset">Resetar</button>
        <button type="submit">Enviar</button>
    </div>
</form>